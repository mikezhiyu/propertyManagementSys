{% extends "master.html.twig" %}

{% block title %}Password reset{% endblock %}

{% block content %}
    <h1 style="font-size: 40px;margin-bottom: 50px;margin-left: 250px;line-height: 150%;color: green">Password reset:</h1>

    {% if error %}
        <p style="text-align: center;font-size: 20px;margin-top: 50px;margin-bottom: 50px;line-height: 100%"><b>We couldn't find email you provided in our system.
                Try again or register a new account</b></p>
            {% endif %}
    <div style="font-size: 20px;margin-left: 250px;line-height: 100%">
        <form method="POST">
            Enter your email: <input type="email" name="email"><br>
            <input class="btn btn-success" style="width: 20%;margin-bottom: 50px;" type="submit" value="Request password reset">
        </form>
    </div>
{% endblock %}
